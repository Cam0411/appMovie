doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Cinema 
        link(rel="stylesheet", href="https://unpkg.com/swiper/swiper-bundle.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css")
        link(rel="stylesheet", href="style/style.css")
        link(rel="stylesheet", href="style/grid.css")
        link(rel="stylesheet", href="style/scrollBar.css")
    body 
     .header 
      .grid.wide 
       .row 
        .col.l-8.m-6.c-6   
          ul.title
           img(src="https://cam0411.github.io/phimmoi2/asset/eCinema_Logo_X2vcmwMm4.png", alt="", srcset="")
           li Home
           li Latest
           li Rating
        .col.l-4.m-6.c-6
         .icon__box 
          <i class="menu fa-solid fa-bars"></i>
         .src__box
          input(type="text" class='src__info' placeholder='Search')  
     .slider

     .container 
      .trending__movie 
       .grid.wide 
        .row   
          p.title Trending Movie  
          .swiper.mySwiper
           .swiper-wrapper
           .swiper-button-next
           .swiper-button-prev
      .lastest__movie 
       .grid.wide 
        .row   
          p.title  Lastest Movie  
          .swiper.mySwiper
           .swiper-wrapper
           .swiper-button-next
           .swiper-button-prev
      .upcoming__movie 
       .grid.wide 
        .row   
          p.title  Upcoming Movie  
          .swiper.mySwiper
           .swiper-wrapper
           .swiper-button-next
           .swiper-button-prev
      .top__rate__movie 
       .grid.wide 
        .row   
          p.title  Top Rate Movie  
          .swiper.mySwiper
           .swiper-wrapper
           .swiper-button-next
           .swiper-button-prev
      .tv__show 
       .grid.wide 
        .row   
          p.title Popular Tv show
          .swiper.mySwiper
           .swiper-wrapper 
           .swiper-button-next
           .swiper-button-prev
      .top__rate__tv
       .grid.wide 
        .row   
          p.title Top Rate Tv show
          .swiper.mySwiper
           .swiper-wrapper
           .swiper-button-next
           .swiper-button-prev
     .src__container 
      p.src__title
      .img__src 
       .grid.wide 
        .row 
     .modal 
      .modal__container 
       .modal__title 
          img(src="https://cam0411.github.io/phimmoi2/asset/eCinema_Logo_X2vcmwMm4.png", alt="", srcset="")
       .modal__menu
        p.menu__title Menu 
         ul.modal__list 
          li <i class="fa-solid fa-house"></i> Home 
          li <i class="play fa-solid fa-play"></i> Lastest 
          li <i class="fa-solid fa-star"></i>  Rating
          li 
           a(href="src/src.html")  <i class="fa-solid fa-magnifying-glass"></i> search
     .modal__background 
     .loader__container 
      .loader 
     script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
     script(type='text/javascript').
          setTimeout(function(){
          $('.loader__container').fadeToggle();
          },1000)

       
     script(src="https://unpkg.com/swiper/swiper-bundle.min.js") 
     script(src="js/header.js") 
     script(src='js/slider.js')
     script(src="js/swiper.js") 
     script(src="js/trending.js")
     script(src="js/lastest.js") 
     script(src="js/upcoming.js") 
     script(src='js/top__rate.js')
     script(src='js/tv__show.js')
     script(src='js/top__rate__tv.js')
     script(src="js/src.js") 
     script(src="js/menu.js", type="")